<body>
  <div id="themeToggle">‚òÄÔ∏è</div>
  <h1>Binary Translator</h1>
  <textarea id="inputText" placeholder="Type text or binary here..."></textarea>
  <div id="output">
    <button id="copyButton">Copy</button>
  </div>
  <label>Text ‚Üî Binary translation happens automatically</label>

<script>
  const input = document.getElementById('inputText');
  const output = document.getElementById('output');
  const themeToggle = document.getElementById('themeToggle');
  const copyButton = document.getElementById('copyButton');
  let darkMode = true;

  function isBinary(str) {
    return /^[01\s]+$/.test(str.trim());
  }

  function textToBinary(text) {
    return text.split('').map(c => c.charCodeAt(0).toString(2).padStart(8,'0')).join(' ');
  }

  function binaryToText(bin) {
    return bin.trim().split(' ').map(b => String.fromCharCode(parseInt(b, 2))).join('');
  }

  input.addEventListener('input', () => {
    const value = input.value;
    if (isBinary(value)) {
      output.textContent = binaryToText(value);
    } else {
      output.textContent = textToBinary(value);
    }
    output.appendChild(copyButton);
  });

  themeToggle.addEventListener('click', () => {
    darkMode = !darkMode;
    if(darkMode){
      document.body.style.backgroundColor = 'var(--bg-dark)';
      document.body.style.color = 'var(--text-dark)';
      input.style.backgroundColor = 'var(--box-dark)';
      input.style.color = 'var(--text-dark)';
      input.style.border = '1px solid var(--border-dark)';
      output.style.backgroundColor = 'var(--box-dark)';
      output.style.color = 'var(--text-dark)';
      output.style.border = '1px solid var(--border-dark)';
      themeToggle.textContent = '‚òÄÔ∏è';
      copyButton.style.backgroundColor = 'var(--accent)';
      copyButton.style.color = 'var(--text-dark)';
    } else {
      document.body.style.backgroundColor = 'var(--bg-light)';
      document.body.style.color = 'var(--text-light)';
      input.style.backgroundColor = 'var(--box-light)';
      input.style.color = 'var(--text-light)';
      input.style.border = '1px solid var(--border-light)';
      output.style.backgroundColor = 'var(--box-light)';
      output.style.color = 'var(--text-light)';
      output.style.border = '1px solid var(--border-light)';
      themeToggle.textContent = 'üåô';
      copyButton.style.backgroundColor = 'var(--accent)';
      copyButton.style.color = 'var(--text-light)';
    }
  });

  copyButton.addEventListener('click', () => {
    const text = output.textContent;
    navigator.clipboard.writeText(text).then(() => {
      copyButton.textContent = 'Copied!';
      setTimeout(() => copyButton.textContent = 'Copy', 1000);
    });
  });
</script>
</body>
